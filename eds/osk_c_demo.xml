<PackageFile xmlns="http://www.ccsds.org/schema/sois/seds">
  <Package name="OSK_C_DEMO" shortDescription="OpenSatKit Demo application">
  
    <DataTypeSet>
    
      <ContainerDataType name="LoadTbl_Payload" shortDescription="Load an app's JSON table">
        <EntryList>
          <Entry name="Id" type="BASE_TYPES/uint8" shortDescription="Table identifier: 0=Packet Log (todo: use enumerated type)" />
          <Entry name="Type" type="BASE_TYPES/uint8" shortDescription="0=Replace Table, 1=Update Records" />
          <Entry name="Filename" type="char@CFE_MSG_MAX_PATH_LEN" shortDescription="Full path and file name of table to be loaded" />
       </EntryList>
      </ContainerDataType>
      
      <ContainerDataType name="DumpTbl_Payload" shortDescription="Dump an app's JSON table">
        <EntryList>
          <Entry name="Id" type="BASE_TYPES/uint8" shortDescription="Table identifier: 0=Packet Log (todo: use enumerated type)" />
          <Entry name="Type" type="BASE_TYPES/uint8" shortDescription="Unused" />
          <Entry name="Filename" type="char@CFE_MSG_MAX_PATH_LEN" shortDescription="Full path and file name of table to be dumped" />
       </EntryList>
      </ContainerDataType>

      <ContainerDataType name="StartLog_Payload" shortDescription="Start logging the command message ID packet headers">
        <EntryList>
          <Entry name="MsgId" type="BASE_TYPES/uint16" shortDescription="Message ID that will be logged." />
       </EntryList>
      </ContainerDataType>

      <ContainerDataType name="HkTlm_Payload" shortDescription="App's state and status summary, 'housekeeping data'">
        <EntryList>
          <Entry name="ValidCmdCnt" type="BASE_TYPES/uint16" />
          <Entry name="InvalidCmdCnt" type="BASE_TYPES/uint16" />
          <Entry name="ChildValidCmdCnt" type="BASE_TYPES/uint16" />
          <Entry name="ChildInvalidCmdCnt" type="BASE_TYPES/uint16" />
          <Entry name="LastTblAction" type="BASE_TYPES/uint8" shortDescription="todo: use enumerated type - Last table action: 1=Register, 2=Load, 3=Dump" />
          <Entry name="LastTblActionStatus" type="BASE_TYPES/uint8" shortDescription="todo: use enumerated type - Last table action status: 0=Undefined, 1=Invalid, 2=Valid" />
          <Entry name="MsgLogEna" type="BASE_TYPES/uint8" />
          <Entry name="MsgPlaybkEna" type="BASE_TYPES/uint8" />
          <Entry name="MsgLogCnt" type="BASE_TYPES/uint16" shortDescription="Number of message log file entries" />
          <Entry name="MsgLogFilename" type="char@CFE_MSG_MAX_PATH_LEN" shortDescription="Number of message log file entries" />
        </EntryList>
      </ContainerDataType>
      
      <ContainerDataType name="Playbk_Payload" shortDescription="">
        <EntryList>
          <Entry name="LogFileEntry" type="BASE_TYPES/uint16" shortDescription="File line number of the header in this message" />
          <Entry name="HdrTxt" type="char@${CFE_MISSION/OSK_C_DEMO_MSGLOG_HDR_TXT_LEN}" />
       </EntryList>
      </ContainerDataType>
      
      <ContainerDataType name="CMD" baseType="CCSDS/CommandPacket">
      </ContainerDataType>

      <ContainerDataType name="ExecuteAppCommand" baseType="CCSDS/CommandPacket">
      </ContainerDataType>

      <ContainerDataType name="SendHkCommand" baseType="CCSDS/CommandPacket">
      </ContainerDataType>

      <ContainerDataType name="HkTlm" baseType="CCSDS/TelemetryPacket">
        <EntryList>
          <Entry type="HkTlm_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>
      
      <ContainerDataType name="PlaybkTlm" baseType="CCSDS/TelemetryPacket">
        <EntryList>
          <Entry type="Playbk_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>


      <ContainerDataType name="Noop" baseType="CMD" shortDescription="Generate an info event message with app version">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="0" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="Reset" baseType="CMD" shortDescription="Reset app to a known state">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="1" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="LoadTbl" baseType="CMD">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="2" />
        </ConstraintSet>
        <EntryList>
          <Entry type="LoadTbl_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="DumpTbl" baseType="CMD">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="3" />
        </ConstraintSet>
        <EntryList>
          <Entry type="DumpTbl_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="StartLog" baseType="CMD" shortDescription="Start logging the command message ID packet headers">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="4" />
        </ConstraintSet>
        <EntryList>
          <Entry type="StartLog_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="StopLog" baseType="CMD" shortDescription="Stop logging packets">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="5" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="StartPlaybk" baseType="CMD" shortDescription="Start playing back in telemetry the last log file created">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="6" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="StopPlaybk" baseType="CMD" shortDescription="Stop a play back that is in progress">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="7" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="RunChildTask" baseType="CMD" shortDescription="Onboard command used to run child task">
        <ConstraintSet>
          <ValueConstraint entry="Sec.Command" value="8" />
        </ConstraintSet>
      </ContainerDataType>

    </DataTypeSet>
    
    <ComponentSet>
      <Component name="Application">
        <RequiredInterfaceSet>
          <Interface name="CMD" shortDescription="Software bus telecommand interface" type="CFE_SB/Telecommand">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelecommandDataType" type="CMD" />
            </GenericTypeMapSet>
          </Interface>
         <Interface name="EXECUTE_APP" shortDescription="Signal app to execute command interface" type="CFE_SB/Telecommand">
            <!-- This uses a bare spacepacket with no payload -->
            <GenericTypeMapSet>
              <GenericTypeMap name="TelecommandDataType" type="ExecuteAppCommand" />
            </GenericTypeMapSet>
          </Interface>
         <Interface name="SEND_HK" shortDescription="Send telemetry command interface" type="CFE_SB/Telecommand">
            <!-- This uses a bare spacepacket with no payload -->
            <GenericTypeMapSet>
              <GenericTypeMap name="TelecommandDataType" type="SendHkCommand" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="HK_TLM" shortDescription="Software bus housekeeping telemetry interface" type="CFE_SB/Telemetry">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelemetryDataType" type="HkTlm" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="PLAYBK_TLM" shortDescription="Message log playback telemetry interface" type="CFE_SB/Telemetry">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelemetryDataType" type="PlaybkTlm" />
            </GenericTypeMapSet>
          </Interface>
        </RequiredInterfaceSet>
        <Implementation>
          <VariableSet>
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="CmdTopicId" initialValue="${CFE_MISSION/OSK_C_DEMO_CMD_TOPICID}" />
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="ExecuteAppTopicId" initialValue="${CFE_MISSION/OSK_C_DEMO_CMD_TOPICID}" />
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="SendHkTopicId" initialValue="${CFE_MISSION/OSK_C_DEMO_SEND_HK_TOPICID}" />
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="HkTlmTopicId" initialValue="${CFE_MISSION/OSK_C_DEMO_HK_TLM_TOPICID}" />
          </VariableSet>
          <!-- Assign fixed numbers to the "TopicId" parameter of each interface -->
          <ParameterMapSet>          
            <ParameterMap interface="CMD" parameter="TopicId" variableRef="CmdTopicId" />
            <ParameterMap interface="EXECUTE_APP" parameter="TopicId" variableRef="ExecuteAppTopicId" />
            <ParameterMap interface="SEND_HK" parameter="TopicId" variableRef="SendHkTopicId" />
            <ParameterMap interface="HK_TLM" parameter="TopicId" variableRef="HkTlmTopicId" />
          </ParameterMapSet>
        </Implementation>
      </Component>
    </ComponentSet>
    
  </Package>
</PackageFile>
